<!doctype html>
<html>
<head>
    <title>Restablecer contraseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body {
            background-color: #3387cc;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            padding-top:0px;
			font-family:"Work Sans", Arial, sans-serif;
        }
		div#general{
			margin:auto;
			margin-top:0px;
			width:960px;
			height: 800px;
			background-color:white;
		}
		.button1 {
			background:#66cc66;
			color: #fff;
			display:inline-block;
			font-size:1.25em;
			margin-left:auto;
			padding:10px 0px;
			text-align:center;
			width:200px;
			text-decoration:none;
			box-shadow:0px 3px 0px #057043;
			border-radius:50px;
		}
        .whiteText {
            color: #24ADB3;
        }
		.btn {
		  cursor: pointer;
		  -webkit-border-radius: 40px;
		  -moz-border-radius: 40px;
		  -ms-border-radius: 40px;
		  border-radius: 40px;
		  -webkit-box-shadow: none !important;
		  box-shadow: none !important; }
		  .btn:hover, .btn:active, .btn:focus {
			outline: none; }
		  .btn.btn-primary {
			background: #2ffc7e;
			border: 1px solid #2f89fc;
			color: #fff; }
			.btn.btn-primary:hover {
			  border: 1px solid #2ffc5b;
			  background: transparent;
			  color: #2f89fc; }
			.btn.btn-primary.btn-outline-primary {
			  border: 1px solid #2ffc5b;
			  background: transparent;
			  color: #2ffc39; }
			  .btn.btn-primary.btn-outline-primary:hover {
				border: 1px solid transparent;
				background: #2ffc62;
				color: #fff; }
		  .btn.btn-white {
			background: #fff;
			border: 1px solid #fff;
			color: #2ffc51; }
			.btn.btn-white:hover, .btn.btn-white:focus, .btn.btn-white:active {
			  border: 1px solid #fff;
			  color: #24adb3; }
			.btn.btn-white.btn-outline-white {
			  border-color: rgba(255, 255, 255, 0.8);
			  background: none;
			  -webkit-border-radius: 30px;
			  -moz-border-radius: 30px;
			  -ms-border-radius: 30px;
			  border-radius: 30px;
			  border-width: 1px;
			  color: #fff; }
			  .btn.btn-white.btn-outline-white:hover, .btn.btn-white.btn-outline-white:focus, .btn.btn-white.btn-outline-white:active {
				background: #fff;
				border-color: #fff;
				color: #2f89fc; }
		  .btn.btn-secondary {
			background: #66cc66;
			border: 1px solid #66cc66;
			color: #fff; }
			.btn.btn-secondary:hover, .btn.btn-secondary:focus, .btn.btn-secondary:active {
			  border: 1px solid #66cc66b6;
			  color: #fff; }
    </style>
</head>
<div class="container">
	<div id="general">
		<div class="col-sm-6 col-sm-offset-3">
			<div id="imgDiv">
				<img class="center-block" id="logo" alt="logo"
					 style="height: 160px; width: 160px; object-fit: contain;margin-top: 40px" src="/images/LOGO.png">
			</div>
			<center>
			<h1 class="whiteText"><span class="fa fa-sign-up"></span><%= EmailLabel %></h1>
			</center>
			<!-- show any messages that come back with authentication -->
			<% if (message && message.length > 0) { %>
				<div id="message" class="alert alert-danger"><%= message %></div>
			<% } %>

			<form action="/forgot_password/submit?language=<%= language %>" method="post" data-toggle="validator">
				<div class="form-group">
					<label class="whiteText"><%= emailLabel %></label>
					<input type="text" class="form-control" name="email" value="<%= email %>" required>
				</div>
				<center>
				<button type="submit" class="btn btn-secondary"><%= ResetPasswordButton %></button>
				</center>
			</form>
		</div>
	</div>
</div>
</body>
</html>